<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clinica.devhealthgroup">
    <!-- Utilizar OpenGL ES V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <!-- Obter imagem da internet-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Obter Localização por Hardware-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Obter Localização por wi-fi e triangulação de antenas-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name='.DHGApplication'
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Devhealthgroup">
        <!-- trabalhar com dados -->
        <!-- Chave de acesso à API do Google Maps -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/API_KEY" />
        <!-- Google Play Service -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- classes -->
        <activity
            android:name=".Mapas"
            android:exported="true" />
        <activity
            android:name=".Configuracoes"
            android:exported="true"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".Buscar"
            android:exported="true"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".Home"
            android:exported="true"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".Cadastro"
            android:exported="true"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".Consultas"
            android:exported="true"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".Agendamento"
            android:exported="true"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".Pagamentos"
            android:exported="true"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

        <service android:name=".MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>